{
  "name": "abc-cours-crm-backend",
  "version": "1.0.0",
  "description": "CRM Backend for ABC Cours",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed": "node scripts/seedDatabase.js",
    "seed:subjects": "node scripts/seedSubjects.js",
    "seed:users": "node scripts/seedUsers.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:api": "jest tests/integration",
    "test:ui": "jest tests/ui",
    "test:e2e": "jest tests/e2e",
    "test:fixtures": "jest tests/fixtures",
    "test:prospects": "jest tests/integration/test-prospects.test.js --runInBand",
    "docker:test:up": "docker-compose -f ../docker-compose.test.yml up -d mongodb-test",
    "docker:test:down": "docker-compose -f ../docker-compose.test.yml down",
    "docker:test:logs": "docker-compose -f ../docker-compose.test.yml logs mongodb-test",
    "test:docker": "npm run docker:test:up && npm run test && npm run docker:test:down",
    "test:docker:watch": "npm run docker:test:up && npm run test:watch"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.20.0",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "puppeteer": "^24.16.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^29.5.0",
    "mongodb-memory-server": "^8.16.1",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.4",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "crm",
    "education",
    "nodejs",
    "mongodb"
  ],
  "author": "Ton nom",
  "license": "MIT",
  "directories": {
    "test": "tests"
  },
  "type": "commonjs"
}
